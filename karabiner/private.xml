<?xml version="1.0"?>
<root>
  <appdef>
    <appname>INTELLIJ</appname>
    <equal>com.jetbrains.intellij</equal>
  </appdef>
  <appdef>
    <appname>WEBSTORM</appname>
    <equal>com.jetbrains.WebStorm</equal>
  </appdef>

  <!-- Do not toggle "ubiquitous vim" in these IDEs -->
  <item>
    <name>Real ctrl-[ in IDEs</name>
    <identifier>intellij.escape</identifier>
    <only>INTELLIJ, WEBSTORM</only>
    <autogen>
      __KeyToKey__ 
      KeyCode::BRACKET_LEFT, ModifierFlag::CONTROL_L,
      KeyCode::ESCAPE
    </autogen>
  </item>

  <!-- Remap cmd-esc to cmd-backtick for app-specific cycling -->
  <item>
    <name>Cmd-ESC to cycle in-app</name>
    <identifier>globalSetting.cmdescswitch</identifier>
    <autogen>
      __KeyToKey__ 
      KeyCode::ESCAPE, ModifierFlag::COMMAND_L,
      KeyCode::BACKQUOTE, ModifierFlag::COMMAND_L
    </autogen>
  </item>
  <!-- Remap shift-cmd-esc to shift-cmd-backtick for app-specific REVERSE cycling -->
  <item>
    <name>Shift-Cmd-ESC to reverse cycle in-app</name>
    <identifier>globalSetting.shiftcmdescswitch</identifier>
    <autogen>
      __KeyToKey__ 
      KeyCode::ESCAPE, ModifierFlag::COMMAND_L, ModifierFlag::SHIFT_R,
      KeyCode::BACKQUOTE, ModifierFlag::COMMAND_L, ModifierFlag::SHIFT_R 
    </autogen>
  </item>


  <!-- Remap ctrl-hjkl to the corresponding arrow key -->
  <item>
    <name>ctrl-[h,j,k,l] to arrow keys</name>
    <identifier>globalSetting.ctrlVimToArrows</identifier>
    <autogen>
      __KeyToKey__ 
      KeyCode::H, ModifierFlag::CONTROL_L, 
      KeyCode::CURSOR_LEFT
    </autogen>
    <autogen>
      __KeyToKey__ 
      KeyCode::J, ModifierFlag::CONTROL_L, 
      KeyCode::CURSOR_DOWN
    </autogen>
    <autogen>
      __KeyToKey__ 
      KeyCode::L, ModifierFlag::CONTROL_L, 
      KeyCode::CURSOR_RIGHT
    </autogen>
    <autogen>
      __KeyToKey__ 
      KeyCode::K, ModifierFlag::CONTROL_L, 
      KeyCode::CURSOR_UP
    </autogen>
  </item>


</root>
